{
    "name": "t3n/graphql-tools",
    "description": "A PHP port of apollo graphQL-tools",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/t3n/graphql-tools",
    "keywords": [
        "graphql",
        "graphql-tools"
    ],
    "require": {
        "php": ">=7.2",
        "webonyx/graphql-php": "~0.13 || ~14.0",
        "ext-json": "*"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "3.4.2",
        "phpunit/phpunit": "^7.3 || ^8.0",
        "react/promise": "^2.7",
        "doctrine/coding-standard": "^5.0",
        "phpstan/phpstan": "^0.10.5",
        "phpstan/phpstan-phpunit": "^0.10.0",
        "phpstan/phpstan-strict-rules": "^0.10.1"
    },
    "autoload": {
        "psr-4": {
            "GraphQLTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GraphQLTools\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Torsten Blindert",
            "email": "info@by-torsten.com"
        }
    ],
    "scripts": {
        "test": "phpunit",
        "lint": "phpcs",
        "static-analysis": "phpstan analyse --ansi"
    }
}
